<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.atp.Activite.Recherche"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <EditText
        android:id="@+id/nomR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Nom"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/bg_register"
        android:textColorLink="@color/bg_register" />

    <EditText
        android:id="@+id/profession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Profession"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/bg_register"
        android:textColorLink="@color/bg_register" />

    <EditText
        android:id="@+id/motscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Mots clÃ© ?"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/bg_register"
        android:textColorLink="@color/bg_register" />

    <Button
        android:id="@+id/btn_rechercher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCA28"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:text="Rechercher"
        android:layout_gravity="bottom"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/content_recherche" />
</LinearLayout>
